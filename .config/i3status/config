# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        separator = ""
}

order += "ipv6"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
# order += "load"
order += "volume master"
# order += "volume speaker"
# order += "volume headphone"
order += "keyboard_layout"
order += "tztime local"

ipv6 {
        format_down = ""
}

wireless _first_ {
        format_up = "%quality at %essid"
        format_down = ""
        color_good = "#00AA00"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "%ip"
        format_down = ""
        color_good = "#00AA00"
}

battery all {
        format = "%status %percentage (%consumption)"
        format_down = "No battery"
        status_chr = ""
        status_bat = ""
        status_full = ""
        low_threshold = 10
        threshold_type = percentage
}

keyboard_layout {
       cache_timeout = 0
       format="{layout}"
       color_ru = "#0000FF"
       color_us = "#00AA00"
       color_de = "#AA0000"
       separator_block_width = 20
}

tztime local {
        format = " %a %d %B %H:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = " %avail"
        low_threshold = 5
        threshold_type = percentage
}

volume master {
       format = " %volume"
       format_muted = "muted"
}

volume speaker {
       mixer = "Speaker"
       format = " %volume"
       format_muted = ""
}

volume headphone {
       mixer = "Headphone"
       format = " %volume"
       format_muted = ""
}