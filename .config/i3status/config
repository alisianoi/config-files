# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        separator = ""
}

order += "ipv6"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
# order += "load"
order += "volume master"
# order += "volume speaker"
# order += "volume headphone"
order += "keyboard_layout"
order += "tztime local"

ipv6 {
        format_down = ""
}

wireless _first_ {
        format_up = "\uf1eb %quality (%essid) %ip"
        format_down = ""
        color_good = "#00AA00"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "\uf2b5 %ip"
        format_down = ""
        color_good = "#00AA00"
}

# battery_level {
#         format = "{icon}{percent}%"
#         charging_character="\uf487"
# }
battery all {
        # also %status and (%consumption)
        format = "%status %percentage"
        format_down = "No battery"
        status_chr = "\uf110"
        status_bat = "\uf240"
        status_full = "c"
        low_threshold = 20
        threshold_type = percentage
}

keyboard_layout {
       cache_timeout = 0
       format="\uf11c {layout}"
       color_ru = "#0000FF"
       color_us = "#00AA00"
       color_de = "#AA0000"
       separator_block_width = 20
}

tztime local {
        format = "%a %d %B %H:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = "\uf0a0 %avail"
        low_threshold = 5
        threshold_type = percentage
}

volume master {
       format = "\uf0a1 %volume"
       format_muted = "muted"
}

volume speaker {
       mixer = "Speaker"
       format = "\uf0a1%volume"
       format_muted = ""
}

volume headphone {
       mixer = "Headphone"
       format = "\uf025%volume"
       format_muted = ""
}